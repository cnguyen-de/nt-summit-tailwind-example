---
import { novasummit } from "../../novasummit";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Novatec Summit 2022</title>
  </head>
  <body>
    <div class="bg-gradient-to-br from-brand-blue/50 to-brand-teal/50">
      <main class="max-w-5xl mx-auto p-4">
        <h1 class="bg-gradient-to-r from-brand-red to-brand-purple bg-clip-text 
        font-extrabold tracking-wider text-5xl text-transparent text-center">Awesome talks of Novatec Summit 2022</h1>
          {
            novasummit.map((section) => (
              <div class="text-center mt-10 py-4 font-bold text-xl">{section.time}</div>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                {section.talks.map((talk) => (
                  <div class="bg-gray-100 shadow p-4 rounded">
                    <h2 class="text-xl font-bold pb-2">{talk.title}</h2>
                    <p>{talk.author}</p>
                  </div>
                ))}
              </div>
            ))
          }
      </main>
    </div>
  </body>
</html>
